{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "hooks/use-auth.jsx", "components/pages/admin/*.jsx", "app/admin/projects/projects.jsx", "app/admin/education/educations.jsx", "app/admin/experiences/experiences.jsx", "app/admin/certificates/certificates.jsx", "app/admin/activestatus/active-status.jsx"],
  "exclude": ["node_modules"]
}
